# EditorConfig helps maintain consistent coding styles for multiple developers
# working on the same project across various editors and IDEs
# See: https://editorconfig.org/

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# Go files
[*.go]
indent_style = tab
indent_size = 4

# Makefiles use tabs
[Makefile]
indent_style = tab

# Markdown files
[*.md]
trim_trailing_whitespace = false
max_line_length = 80

# YAML files
[*.{yml,yaml}]
indent_size = 2

# JSON files
[*.json]
indent_size = 2

# Shell scripts
[*.sh]
end_of_line = lf
indent_size = 2

# Git config files
[.git*]
indent_style = tab
